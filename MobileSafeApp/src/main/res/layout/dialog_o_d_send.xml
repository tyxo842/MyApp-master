<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/layout_dialog_radius"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center"
            android:text="发货"
            android:textColor="@color/order_text_font_h_color_333333"
            android:textSize="@dimen/text_size_16sp"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/order_list_magin_10"
            android:paddingRight="@dimen/order_list_magin_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/order_list_magin_10"
                android:textColor="@color/order_text_font_h_color_333333"
                android:textSize="@dimen/text_size_13sp"
                android:text="快递单号(可选)"/>

            <EditText
                android:id="@+id/ems_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/selector_order_list_item_radian_2"
                android:gravity="center"
                android:hint="请输入快递单号"
                android:textSize="@dimen/text_size_13sp"
                android:textColorHint="@color/order_dialog_hint_color"
                android:textColor="@color/order_text_font_h_color_333333"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:background="#ffd0d0d0"/>

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="确认发货"
                android:background="@drawable/selector_dialog_blue"
                android:textColor="@drawable/selector_dialog_white"
                android:textSize="@dimen/text_size_16sp"/>
            <!--android:background="@drawable/selector_dialog_blue_unradius"
            android:background="@drawable/selector_dialog_blue"
            android:background="@drawable/layout_dialog_radius"-->

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
