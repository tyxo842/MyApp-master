<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/main_header_gv_item_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_order_list_item_radian_2">

        <ImageView
            android:id="@+id/main_header_gv_item_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/main_header_gv_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机防盗"/>

    </LinearLayout>

    <TextView
        android:id="@+id/main_header_gv_item_tv_tianchong"
        android:layout_width="58dp"
        android:layout_height="58dp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/main_header_gv_item_iv_num"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/main_header_gv_item_tv_tianchong"
        android:scaleType="centerCrop"
        android:background="@drawable/selector_main_grid_iv_num"
        android:src="@drawable/ic_online_questioner"
        />

</RelativeLayout>