<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?attr/colorPrimary"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_main_back"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingRight="25dp"
        android:src="@mipmap/iocn_return" />
    <!--android:background="@drawable/selector_listview_item_bg"--> <!--#3F51B5-->
    <!--android:background="@drawable/actionbar_icon_press"-->

    <TextView
        android:id="@+id/tv_actionbar_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <!--为了解决 添加搜索menu键,将其挤到左边,不居中问题-->
    <TextView
        android:id="@+id/tv_actionbar_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="40dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/iv_main_save"
        style="@style/actionbar_save"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="5dp"
        android:text="保存"
        android:textColor="@color/white"
        android:visibility="invisible" />

</RelativeLayout>